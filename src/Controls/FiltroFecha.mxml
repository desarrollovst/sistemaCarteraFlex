<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="300" height="150" backgroundAlpha="1.0" 
	backgroundColor="#FFFFFF" verticalScrollPolicy="off" horizontalScrollPolicy="off" xmlns:Data="Data.*">
	<mx:states>
		<mx:State name="rango">
			<mx:SetProperty name="width" value="310"/>
			<mx:SetProperty name="height" value="180"/>
			<mx:SetProperty target="{canvas1}" name="width" value="290"/>
			<mx:SetProperty target="{canvas1}" name="height" value="68"/>
			<mx:SetProperty target="{lblFecha}" name="text" value="Fecha inicial:"/>
			<mx:SetProperty target="{lblFecha}" name="x" value="21"/>
			<mx:SetProperty target="{lblFecha}" name="y" value="12"/>
			<mx:SetProperty target="{dtfFecha}" name="x" value="21.05"/>
			<mx:SetProperty target="{dtfFecha}" name="y" value="31"/>
			<mx:AddChild relativeTo="{canvas1}" position="lastChild">
				<mx:Label id="lblFecFin" x="156" y="12" text="Fecha Final:"/>
			</mx:AddChild>
			<mx:AddChild relativeTo="{canvas1}" position="lastChild">
				<mx:DateField id="dtfFecFin" x="156" y="31" width="111" change="validarFechaFin()"/>
			</mx:AddChild>
			<mx:SetProperty target="{btnGenerar}" name="x" value="79.5"/>
			<mx:SetProperty target="{btnGenerar}" name="y" value="141"/>
			<mx:SetProperty target="{btnLimpiar}" name="x" value="159.5"/>
			<mx:SetProperty target="{btnLimpiar}" name="y" value="141"/>
		</mx:State>
	</mx:states>
	
	<mx:Metadata>
		[Event(name="enviar", type="enviar")]
		[Event(name="limpiar", type="limpiar")]
	</mx:Metadata>
	
	<mx:Script>
		<![CDATA[
			import Data.Globales;
			import Data.Utils;
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.core.Application;
			import mx.effects.easing.Elastic;	
			import mx.managers.PopUpManager;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.soap.WebService;
			import mx.utils.ObjectUtil;
			
			private var du:Utils;
			private var global:Globales;
			private var rep:String;
			private var titulo:String;
			
			public function ejecuta():void{
				//rep = 0 indica que el control es utilizado para extraer 
				//los valores de sus controles
				if(rep == "0")
					enviar();
				//rep <> 0 indica que el control es utilizado para generar 
				//el reporte indicado en esta variable
				else if(rep != "0")
					generar();
			}
			
			public function enviar():void{
				dispatchEvent(new Event("enviar"));
			}
			
			//funcion que invoca la generacion de reportes en formato PDF
			public function generar():void{
				if(valida()){
					var id:String = "&id=" + rep;
					var fecha:String = "&fecha=" + global.formatearFechaSep(dtfFecha.selectedDate,"-");
					var usuario:String = "&usuario=" + global.obtenerUsuario();
					var nomUsuario:String = "&nomUsuario=" + global.obtenerNombreUsuario();
					var consulta:String = global.urlPdf + id + fecha + usuario + nomUsuario;
					Application.application.muestraPdf(consulta);
				}
				else
					Alert.show("No es posible generar el documento del grupo.\n\nVerifique los datos capturados.",titulo,4,null,null,global.iAlert);
			}			
						
			public function init(rep:String, titulo:String, fechaMin:String, fechaMax:String, estatus:String=null):void{
				global = new Globales();
				du = new Utils();
				this.rep = rep;
				this.titulo = titulo;
				lblTitulo.text = titulo.toUpperCase();
				currentState = estatus;
				dtfFecha.selectableRange = {rangeStart: global.convCadenaFecha(fechaMin), rangeEnd: global.convCadenaFecha(fechaMax)};
				if(currentState == "rango")
					dtfFecFin.selectableRange = {rangeStart: global.convCadenaFecha(fechaMin), rangeEnd: global.convCadenaFecha(fechaMax)};
				limpiar();
			}	
			
			public function obtenerFecha():String{
				return dtfFecha.text;
			}
			
			public function obtenerFechaFin():String{
				return dtfFecFin.text;
			}
			
			public function limpiar():void{
				var fec:Date;
				fec = global.obtenerFechaSistema();
				dtfFecha.selectedDate = global.seleccionarDiaHabil(new Date(fec.fullYear,fec.month,fec.date-1));
				if(currentState == "rango")
					dtfFecFin.selectedDate = global.seleccionarDiaHabil(new Date(fec.fullYear,fec.month,fec.date-1));
				dispatchEvent(new Event("limpiar")); 
			}
				
			public function valida():Boolean{
				if(dtfFecha.text == ""){
					Alert.show("Seleccione la fecha del reporte.",titulo,4,null,null,global.iAlert);
					return false;
				}
				if(currentState == "rango"){
					if(dtfFecFin.text == ""){
						Alert.show("Seleccione la fecha final del reporte.",titulo,4,null,null,global.iAlert);
						return false;
					}
				}	
				return true;
			}
			
			private function validarFechaFin():void{
				if(dtfFecFin.selectedDate < dtfFecha.selectedDate){
					Alert.show("La fecha final no puede ser menor a la fecha inicial.",titulo,4,null,null,global.iAlert);
					dtfFecFin.text = dtfFecha.text;
				}
			}
		]]>
	</mx:Script>
	<mx:Label id="lblTitulo" x="8" y="10" width="292" fontSize="12" fontWeight="bold" fontStyle="italic"/>
	<mx:Label x="10" y="34" text="Criterios de SelecciÃ³n" width="124.25"/>
	<mx:Button x="74" y="116" label="Generar" click="ejecuta()"  id="btnGenerar" height="24"/>
	<mx:Button x="154" y="116" label="Limpiar" width="71" height="24" click="limpiar()" id="btnLimpiar"/>
	<mx:Canvas x="10" y="62" width="280" height="37" styleName="canvasMod" id="canvas1">
		<mx:DateField id="dtfFecha" x="112.1" y="6" width="111"/>
		<mx:Label x="56" y="8" text="Fecha:" id="lblFecha"/>
	</mx:Canvas>
</mx:Canvas>