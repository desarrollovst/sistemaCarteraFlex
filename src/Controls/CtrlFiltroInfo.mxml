	<mx:ComboBox id="cboRegion" x="4" y="20.5" labelField="nombre" change="modificaRegion()" width="170"></mx:ComboBox>
	<mx:Label x="4" y="52.5" text="Sucursal" width="81" height="23"/>
	<mx:ComboBox id="cboSucursal" x="4" y="73" labelField="nombre" width="170" change="modificaSucursal()"></mx:ComboBox>
	<mx:Label x="4" y="105" text="Coordinador" height="20"/>
	<mx:ComboBox id="cboCoord" x="4" y="122.5" labelField="nombre" change="modificaCoord()" width="242.05"></mx:ComboBox>
	<mx:Label x="4" y="154.5" text="Asesor" width="61.75" height="20"/>
	<mx:ComboBox id="cboAsesor" x="4" y="172" labelField="nombre" change="seleccionaAsesor()" width="242.05"></mx:ComboBox>	
</mx:Canvas>