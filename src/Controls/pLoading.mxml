<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="358" height="80" backgroundAlpha="0.0" 
	creationComplete="init()" verticalScrollPolicy="off" horizontalScrollPolicy="off">
			
	<mx:Script>
		<![CDATA[
			import Data.Utils;			
			import mx.managers.PopUpManager;			
			
			private var t:Timer = new Timer(1000,25);
			private var tim:int = 0;
			private var du:Utils = new Utils();
			
			private function cancelar():void{
				PopUpManager.removePopUp(this);
			}
			
			private function init():void{
				t.addEventListener(TimerEvent.TIMER, onTick);
				t.addEventListener(TimerEvent.TIMER_COMPLETE, onComplete);
				
				t.start();
			}
			
			private function onTick(event:TimerEvent):void{				
				tim = tim + 1 ;
				lblCarga.text = tim.toString(); 
			}
			
			private function onComplete(event:TimerEvent):void{								
				lblCarga.text = "Espere un momento...";				
			}	
		]]>
	</mx:Script>
	<mx:ProgressBar x="27.6" y="20" width="322.75" height="37" 
		labelPlacement="top" indeterminate="true" enabled="true" 
		label="Procesando solicitud..."  		
		visible="true" textAlign="center" color="#000000" borderColor="#96F272"  barColor="#56CE53"/>
	<mx:Label x="26.6" y="54" text="0" fontWeight="bold" color="#000000" id="lblCarga"/>
</mx:Canvas>