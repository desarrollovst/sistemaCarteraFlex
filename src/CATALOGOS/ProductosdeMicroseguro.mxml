	<!-- VARIABLES -->
	<mx:Script>
		<![CDATA[
			private var info:DatosProdMicro;
			
			private var _xmlProdMicro:XML = new XML();
			private var dPermisos:XML = new XML();
			
			private var wsMS:WebService = new WebService();
