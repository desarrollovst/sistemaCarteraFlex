			private var indProdMicro:int;
			private var vScroll:Number;
			
			private var alta:Boolean = new Boolean();
			private var borrado:Boolean = new Boolean();
			private var consulta:Boolean = new Boolean();
			private var edicion:Boolean = new Boolean();
		]]>
	</mx:Script>
	
	<!-- FUNCIONES GENERALES -->
	<mx:Script>
		<![CDATA[
			import Data.Permisos;
			private function iniVar():void{
				this.indProdMicro = -1;
				this.vScroll = -1;
			}
			
			private function initApp():void{
				du = new Utils();
				global = new Globales();
				permiso = new Permisos();
				titulo = "Mantenimiento de Productos de Microseguros";
				lblTitulo.text = titulo.toUpperCase();
				alta = false;
				borrado = false;
				consulta = false;
				edicion = false;
				permisos();
			}
			
			private function initConexion():void{				
				wsMS = new WebService();			
				wsMS.wsdl = Application.application.wsStr.wsdlServ.toString();
				wsMS.loadWSDL();
			}
			
			private function activarContProdMicro(band:Boolean):void{
				if(alta == true)
				btnAgregar.enabled = band;
			}
			
			private function activarContModProdMicro(band:Boolean):void{
				if(borrado == true)
					btnEliminar.enabled = band;
				if(edicion == true)	
					btnEditar.enabled = band;
			}
			
			private function actualizarProdMicro(event:Event):void{
				buscarListaProdMicro(1);
			}
			
			private function permisos():void{
				var mod_id:String = global.obtenerModulo();
				var perfil_id:String = global.obtenerCadPerfil();
				var Params:Array;
				var cont:int;
				
				wsMS = du.initWs(wsMS);
				du.sCursor();
					
				du.ejecutaWsMethod(wsMS,function(evt:ResultEvent):void {											
					dPermisos = new XML(evt.result.toString());
						
					cont = dPermisos.elements().length();
					
					for(var i:int = 0; i < cont; i++){
						switch(dPermisos.Table[i].OPCION.toString()){
							case "C":
								consulta = true;
								if (permiso.permisosModGrupos(global.obtenerArrayPerfil())){
									borrado = true;
									alta = true;
									edicion = true;
								}
								break;	
							/*case "B":
								borrado = true;
								break;
							case "I":
								alta = true;
								break;
							case "E":
								edicion = true;
								break;	*/			
						}
					}
					btnAgregar.enabled = alta;
					du.rCursor();
					du.closeWs(wsMS);					
				});
				Params = new Array();
				Params[0] = perfil_id;
				Params[1] = mod_id;
				wsMS.ESLoginMethods.send(14,Params);	//Método que indica las opciones disponibles para el usuario	
			}
			
			private function seleccionaProd():void{
				if (dgProdMicro.selectedIndex >= 0){
					activarContModProdMicro(true);
				}
				else{
					activarContModProdMicro(false);
				}
			}
		]]>
	</mx:Script>
	
	<!-- BUSCAR LISTA -->
	<mx:Script>
		<![CDATA[			
			private function buscarListaProdMicro(tipo:int):void{
				var wsCat:WebService = new WebService();
				var params:Array = new Array();
				
				if (txtCodigo.text != "" || txtDescripcion.text != ""){
					dgProdMicro.dataProvider = null;
					dgProdMicro.invalidateList();
					
					du.initWsCat(wsCat);
			 		du.sCursor();
			 	
					if (tipo == 1)
						global.bloquear();	
						
					du.ejecutaWsMethod(wsCat,function(event:ResultEvent):void {		
						_xmlProdMicro = new XML(event.result);
						
						du.closeWs(wsCat);
						du.rCursor();
						global.desbloquear();
						
						if (_xmlProdMicro.elements().length() > 0){
							dgProdMicro.dataProvider = _xmlProdMicro.Table;
					
							if(accionProdMicro == 2){
								dgProdMicro.validateNow();
								dgProdMicro.verticalScrollPosition = vScroll;
								dgProdMicro.selectedIndex = indProdMicro;
								this.accionProd = 0;
							}
							seleccionaProd();
						}
					});
					
					params[0] = txtCodigo.text;
					params[1] = txtDescripcion.text;
					wsCat.getListado.send(58, params);
				}
			}
		]]>
	</mx:Script>
	
	<!-- ELIMINAR -->
	<mx:Script>
		<![CDATA[
			private function eliminarProdMicro():void{
				if(dgProdMicro.selectedIndex >= 0){
					if(dgProdMicro.selectedItem.CODIGO != "")
						Alert.show("¿Desea eliminar el producto de microseguro seleccionado?", titulo, Alert.YES|Alert.NO,null, manejadorEliminarProdMicro,global.iQuest);
					else
						Alert.show("Seleccione producto de microseguro a eliminar.", titulo, 4,null,null,global.iAlert);
				}
			}
			
			private function manejadorEliminarProdMicro(e:CloseEvent):void{
				if(e.detail==Alert.YES){
					info = new DatosProdMicro();
					info.codigo = dgProdMicro.selectedItem.CODIGO;
					info.descripcion = "";
					info.cdgcms = "";
					info.plazo = 0;
					info.periodicidad = "";
					info.valido_hasta = "";
					info.importe = 0;
					info.iva = 0;
					info.costo = 0;
					info.edad_max = 0;
					info.edad_min = 0;
					info.monto_defuncion = 0;
					info.bono = 0;
					info.aseguradora = "";
					
			    	initConexion();
			    	du.sCursor();
					global.bloquear();
					wsMS.addEventListener(ResultEvent.RESULT, setAccionProdMicro);
					wsMS.setAccionProductoMicroseguro.send(info.codigo, info.descripcion, info.cdgcms, info.plazo, info.periodicidad 
												, info.valido_hasta, info.importe, info.iva, info.costo, info.edad_max, info.edad_min
												, info.monto_defuncion, info.bono, info.aseguradora, 3);
			    } 
			}
			
			private function setAccionProdMicro(event:ResultEvent):void{
				wsMS.disconnect();
				du.rCursor();
				global.desbloquear();
				wsMS.removeEventListener(ResultEvent.RESULT, setAccionProdMicro);
				var res:String = new String(event.result.toString());
				
				if (res.substr(0,1) == "1")
					buscarListaProdMicro(1);
				else
					Alert.show(res.substr(2,res.length-1), titulo,4,null,null,global.iAlert);
			}
		]]>
	</mx:Script>
	
	<!-- MOSTRAR FORMULARIOS -->
	<mx:Script>
		<![CDATA[
			private function mostrarFormProdMicro(tipo:int):void{
				//tipo = 1 NUEVO REGISTRO
				//tipo = 2 MODIFICA REGISTRO
				var comMttoProdMicro:MttoProdMicro = new MttoProdMicro(); 
				if(edicion == true){
					objMtto = this;					
					switch(tipo){
						case 1: 
							comMttoProdMicro = MttoProdMicro(PopUpManager.createPopUp(objMtto,MttoProdMicro,true));
							comMttoProdMicro.addEventListener(Event.REMOVED_FROM_STAGE, actualizarProdMicro);
							PopUpManager.centerPopUp(comMttoProdMicro);
							comMttoProdMicro.registraInfoProdMicro();
							break;
						case 2: 
							if (dgProdMicro.selectedIndex >= 0){
								accionProdMicro = tipo;
								comMttoProdMicro = MttoProdMicro(PopUpManager.createPopUp(objMtto,MttoProdMicro,true));	
								comMttoProdMicro.addEventListener(Event.REMOVED_FROM_STAGE, actualizarProdMicro);
								PopUpManager.centerPopUp(comMttoProdMicro);
								iniVar();
								this.indProdMicro = dgProdMicro.selectedIndex;
								this.vScroll = dgProdMicro.verticalScrollPosition;		
								comMttoProdMicro.cargarInfoProdMicro(_xmlProdMicro.Table[dgProdMicro.selectedIndex]);
							}
							else
								Alert.show("Debe seleccionar el registro de producto de microseguro.",titulo,4,null,null,global.iAlert); 
							break;
					}
				}
			}
	]]>
	</mx:Script>
	
