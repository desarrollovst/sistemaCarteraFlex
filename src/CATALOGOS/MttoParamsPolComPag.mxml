		<mx:ComboBox x="78" y="40" width="247" id="cbxCuenta" labelField="numero" change="buscarInteres()"/>
		<mx:Label x="21.5" y="42" text="Cuenta:" width="48.5" height="20" textAlign="right" id="lblCuenta"/>
	</mx:Canvas>
