			<mx:Button id="btnBuscarConv" x="10" y="3" icon="@Embed(source='assets/images/iconBusq.png')" click="buscarConv(1)" toolTip="Buscar Convenio" width="40" />
			<mx:Button id="btnEditarConv" x="57" y="3" icon="@Embed(source='assets/images/edit.png')" enabled="false" click="mostrarFormConv(2)" toolTip="Editar Convenio" width="40"/>
			<mx:Button id="btnAgregarConv" x="105" y="3" icon="@Embed(source='assets/images/add.png')" click="mostrarFormConv(1)" toolTip="Registrar Convenio" width="40"/>
