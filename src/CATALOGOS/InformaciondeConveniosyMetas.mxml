				horizontalScrollPolicy="auto" itemClick="seleccionaMeta()"> 
				<Data:columns>
					<mx:DataGridColumn headerText="NÓMINA ASESOR" dataField="NOMINA" width="110"/>
					<mx:DataGridColumn headerText="NOMBRE ASESOR" dataField="NOMPE" width="220"/>
					<mx:DataGridColumn headerText="MES" dataField="MES" width="50"/>
					<mx:DataGridColumn headerText="AÑO" dataField="ANIO" width="50"/>
