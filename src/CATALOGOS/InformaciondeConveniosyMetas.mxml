				</Data:columns>
			</Data:RowColorDataGrid>
		</mx:Canvas>
		<mx:Canvas x="539.5" y="238" width="205" height="37" cornerRadius="10" borderStyle="solid" borderColor="#7B8B93" visible="true">
			<mx:Button id="btnBuscarMeta" x="10" y="3" icon="@Embed(source='assets/images/iconBusq.png')" click="buscarMeta(1)" toolTip="Buscar Meta" width="40" />
			<mx:Button id="btnEditarMeta" x="57" y="3" icon="@Embed(source='assets/images/edit.png')" enabled="false" click="mostrarFormMeta(2)" toolTip="Editar Meta" width="40"/>
			<mx:Button id="btnAgregarMeta" x="105" y="3" icon="@Embed(source='assets/images/add.png')" click="mostrarFormMeta(1)" toolTip="Registrar Meta" width="40"/>
			<mx:Button id="btnEliminarMeta" x="153" y="3" icon="@Embed(source='assets/images/iconDelete.png')" click="eliminarMeta()" enabled="false" toolTip="Eliminar Meta" width="40"/>
		</mx:Canvas>
