		<mx:Label x="18.5" y="243" text="TIPO DE PERSONA" width="247" fontSize="12" fontWeight="bold" fontStyle="italic"/>
		<mx:Canvas x="31.5" y="39" width="500.5" height="37" cornerRadius="10" borderStyle="solid" borderColor="#7B8B93" visible="true">
			<mx:Label id="lblCodEnt" x="11" y="7" text="Código:"/>
			<mx:Label id="lblEntidad" x="153" y="7" text="Nombre:"/>
			<mx:TextInput id="txtCodEnt" x="64" y="5" width="50" enter="buscarEntidad(1)" maxChars="3"/>
			<mx:TextInput id="txtEntidad" x="210.5" y="5" width="276" enter="buscarEntidad(1)" maxChars="50"/>
		</mx:Canvas>
		<mx:Canvas x="540" y="39" width="108" height="37" cornerRadius="10" borderStyle="solid" borderColor="#7B8B93" visible="true">
			<mx:Button id="btnBuscarEnt" x="10" y="3" icon="@Embed(source='assets/images/iconBusq.png')" click="buscarEntidad(1)" toolTip="Buscar Entidad" width="40" />
			<mx:Button id="btnEditarEnt" x="57" y="3" icon="@Embed(source='assets/images/edit.png')" enabled="false" click="mostrarFormEntidad(2)" toolTip="Editar Entidad" width="40"/>
		</mx:Canvas>
		<mx:Canvas id="cnvDetalle" x="18.5" y="84" width="726.5" height="146" cornerRadius="10" borderStyle="solid" borderColor="#7B8B93" visible="true">
			<Data:RowColorDataGrid id="dgEntidad" x="10" y="10" width="700.5" height="124" sortableColumns="false" 
				draggableColumns="false" resizableColumns="false" itemDoubleClick="mostrarFormEntidad(2)" 
				doubleClickEnabled="true"> 
				<Data:columns>
					<mx:DataGridColumn headerText="CODIGO" dataField="CODIGO" width="75"/>
					<mx:DataGridColumn headerText="DESCRIPCION" dataField="NOMBRE" width="200"/>
					<mx:DataGridColumn headerText="TIPO" dataField="DESCTIPO" width="75"/>
				</Data:columns>
			</Data:RowColorDataGrid>
		</mx:Canvas>
		<mx:Canvas id="cnvTasa" x="18.5" y="315" width="726.5" height="146" cornerRadius="10" borderStyle="solid" borderColor="#7B8B93" visible="true">
			<Data:RowColorDataGrid id="dgTipoPers" x="10" y="10" width="704.5" height="124" sortableColumns="false" draggableColumns="false" 
				resizableColumns="false" doubleClickEnabled="true" doubleClick="mostrarFormTipoPers(2)"> 
				<Data:columns>
					<mx:DataGridColumn headerText="CODIGO" dataField="CODIGO" width="75"/>
					<mx:DataGridColumn headerText="DESCRIPCION" dataField="DESCRIPCION" width="200"/>
					<mx:DataGridColumn headerText="TIPO" dataField="DESCTIPO" width="75"/>
				</Data:columns>
			</Data:RowColorDataGrid>
		</mx:Canvas>
		<mx:Canvas x="31.5" y="270" width="500.5" height="37" cornerRadius="10" borderStyle="solid" borderColor="#7B8B93" visible="true">
			<mx:Label id="lblCodTipo" x="10" y="7" text="CODIGO:" width="53"/>
			<mx:Label id="lblTipoPers" x="128" y="7" text="DESCRIPCION:" width="83.5"/>
			<mx:TextInput id="txtCodTipo" x="64" y="5" width="50" enter="buscarTipoPers(1)" maxChars="3"/>
			<mx:TextInput id="txtTipoPers" x="210.5" y="5" width="276" enter="buscarTipoPers(1)" maxChars="50"/>
		</mx:Canvas>
		<mx:Canvas x="540" y="270" width="205" height="37" cornerRadius="10" borderStyle="solid" borderColor="#7B8B93" visible="true">
			<mx:Button id="btnBuscarTipo" x="10" y="3" icon="@Embed(source='assets/images/iconBusq.png')" click="buscarTipoPers(1)" toolTip="Buscar Tipo de Persona" width="40" />
			<mx:Button id="btnEditarTipo" x="57" y="3" icon="@Embed(source='assets/images/edit.png')" enabled="false" click="mostrarFormTipoPers(2)" toolTip="Editar Tipo de Persona" width="40"/>
			<mx:Button id="btnAgregarTipo" x="105" y="3" icon="@Embed(source='assets/images/add.png')" click="mostrarFormTipoPers(1)" toolTip="Registrar Tipo de Persona" width="40"/>
			<mx:Button id="btnEliminarTipo" x="153" y="3" icon="@Embed(source='assets/images/iconDelete.png')" click="eliminarTipoPers()" enabled="false" toolTip="Eliminar Tipo de Persona" width="40"/>
		</mx:Canvas>
	</mx:Canvas>
</mx:Canvas>