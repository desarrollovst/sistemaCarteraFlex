	<mx:Script>
		<![CDATA[
			import Data.DatosAcred;
			import Data.EventAcred;
			import Data.Globales;
			import Data.Utils;
			import mx.collections.ArrayCollection;
			import flash.external.ExternalInterface;
			import mx.controls.Alert;
			import mx.core.Application;			
			import mx.effects.easing.Elastic;
			import mx.managers.PopUpManager;
			import mx.rpc.soap.WebService;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.xml.SimpleXMLDecoder;
			import mx.utils.ArrayUtil;
			import mx.utils.StringUtil;
			import mx.validators.Validator; 
			
			
			private var _xmlCoord:XML =  new XML();
			private var _xmlEntFed:XML =  new XML();
			private var _xmlPais:XML =  new XML();			
			public var coordArr:Array = new Array();			
			public var coordObj:ArrayCollection = new ArrayCollection();
			public var paisObj:ArrayCollection = new ArrayCollection();
			public var entFedObj:ArrayCollection = new ArrayCollection();
			public var du:Utils;
			public var wsMS:WebService;
			
			public function initConexion():void{				
				wsMS = new WebService();			
				wsMS.wsdl = Application.application.wsStr.wsdlServ.toString();
				wsMS.loadWSDL();
			}
			
			public function formateaCoord(co:String):void{
				_xmlCoord = Application.application._xmlSuc;
				var i:int;
				var cont:int = _xmlCoord.elements().length();
				for (i = 0; i < cont; i++){					
					ExternalInterface.call("console.log", "_xmlCoord.Table[i].CODIGO =" + _xmlCoord.Table[i].CODIGO );
					if(co == _xmlCoord.Table[i].CODIGO) {	
						var str:String = _xmlCoord.Table[i].NOMBRE;									
						txtCo.text = str.toUpperCase();
					}			
				}		
			}
			
			
			public function buscarPais(paisId:String):void{
				var wsCat:WebService = new WebService;
				du = new Utils();				
				du.initWsCat(wsCat);
				du.sCursor();				
				du.ejecutaWsMethod(wsCat,function(evt:ResultEvent):void {											
					_xmlPais = new XML(evt.result.toString());
					var i:int;
					var cont:int = _xmlPais.elements().length();
					du.rCursor();
					du.closeWs(wsCat);
					for (i = 0; i < cont; i++){
						ExternalInterface.call("console.log", "_xmlCoord.Table[i].CODIGO =" + _xmlPais.Table[i].CODIGO );
						if(paisId == _xmlPais.Table[i].CODIGO) {
							var pais:String = _xmlPais.Table[i].NOMBRE;
							var gentilicio:String = _xmlPais.Table[i].GENTILICIO;								 
							txtPais.text = pais.toUpperCase();	
							txtNacion.text = gentilicio.toUpperCase()  ;		
						}			
					}
				});
				//CONSULTA LOS PAISES DISPONIBLES
				wsCat.getCatalogoGral.send(1);
			}
		
			public function buscarEntidadNacim(paisId:String):void{
				var wsCat:WebService = new WebService;
				du = new Utils();
				du.initWsCat(wsCat);
				du.sCursor();
				
				du.ejecutaWsMethod(wsCat,function(evt:ResultEvent):void {											
					_xmlPais = new XML(evt.result.toString());
					var i:int;
					var cont:int = _xmlPais.elements().length();
					du.rCursor();
					du.closeWs(wsCat);
					for (i = 0; i < cont; i++){						 
						ExternalInterface.call("console.log", "_xmlCoord.Table[i].CODIGO =" + _xmlPais.Table[i].CODIGO );
						if(paisId == _xmlPais.Table[i].CODIGO) {				 
							txtEntFed.text = _xmlPais.Table[i].NOMBRE;		
						}			
					}
				});
				//CONSULTA LOS PAISES DISPONIBLES
				wsCat.getCatalogoGral.send(2);
			}
			public function init(info:DatosAcred):void{
				var wsCat:WebService = new WebService;
				var params:Array = new Array;				
				du = new Utils();
														
				if (info != null){	
					formateaCoord(info.cdgco);
					ExternalInterface.call("console.log", "info.cdgco=" + info.cdgco );				
					txtCodigo.text = info.codigo;
					txtNombre.text = info.nombre;
					txtSegNombre.text = info.segNombre;
					txtAP.text = info.aPaterno;
					txtAM.text = info.aMaterno;
					txtSexo.text = info.sexo == "H"? "MASCULINO": "FEMENINO";
					txtFecha.text = info.fecha;
					buscarPais(info.cdgPaisNac)
					buscarEntidadNacim(info.cdgEntFedNac);																
					txtRfc.text = info.rfc;
					txtCurp.text = info.curp;
					txtIfe.text = info.ife;
				}		
			}
		 
	]]>
	</mx:Script>
	
	<mx:FormItem label="Código:" id="codigo" visible="true">
		<mx:TextInput id="txtCodigo" maxChars="12" editable="false" width="161"/>
	</mx:FormItem>
	<mx:FormItem label="Nombres:" id="nombre" visible="true" width="393">
		<mx:Canvas>
			<mx:TextInput id="txtNombre" width="136"  editable="false"/>
			<mx:TextInput id="txtSegNombre" x="135" width="137"   editable="false"/>	
		</mx:Canvas>
	</mx:FormItem>
	<mx:FormItem label="Apellido Paterno:" id="AP" visible="true">
