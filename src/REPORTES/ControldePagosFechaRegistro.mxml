			<mx:DataGridColumn headerText="HORA REGISTRO" dataField="HORAREG" width="110"/>
			<mx:DataGridColumn headerText="FECHA REUNION" dataField="FECHAREUNION" width="120"/>
			<mx:DataGridColumn headerText="DIA REUNION" dataField="DIAREUNION"/>
			<mx:DataGridColumn headerText="HORA REUNION" dataField="HORARIO"/>
			<mx:DataGridColumn headerText="TIEMPO TRANSCURRIDO" dataField="TIEMPOTRANS" width="150"/>
			<mx:DataGridColumn headerText="USUARIO" dataField="CDGPE"/>
			<mx:DataGridColumn headerText="NOMBRE USUARIO" dataField="NOMPE"/>
		</Data:columns>
	</Data:RowColorDataGrid>
	<mx:Button id="btnExportar" x="678" y="279.5" label="Exportar Excel" click="exportar()" enabled="false"/>
	<mx:Label id="lblTotal" x="17.95" y="484.5" width="470.05" fontWeight="bold" fontStyle="italic" fontSize="12"/>
</mx:Canvas>