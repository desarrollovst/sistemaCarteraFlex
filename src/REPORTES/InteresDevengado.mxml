	<!--Componente de Reporte de Interes Devengado-->
	<mx:Script>
		<![CDATA[
			import mx.events.IndexChangedEvent;
			import Data.ExcelExportXls;
			import Data.Globales;
			import Data.Utils;
			import mx.collections.ArrayCollection;
			import mx.core.Application;
			import mx.containers.TitleWindow;		
			import mx.managers.PopUpManager;
			import mx.formatters.NumberFormatter;
			import mx.controls.Alert;
			import mx.effects.easing.Elastic;
			import mx.rpc.soap.WebService;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.events.FaultEvent;
			import mx.utils.ObjectUtil;
			
			private var _xmlRep:XML =  new XML();
			
			public var wsMS:WebService;
			public var fecIni:String;
			public var fecFin:String;
			public var titulo:String;
			private var du:Utils;
			private var global:Globales;
		
			public function exportar():void{
				var dgE:ExcelExportXls = new ExcelExportXls(); 
				if(currentState == null)
					dgE.loadDGInExcel(dgReporte,null,titulo + " del " + fecIni + " al " + fecFin);
				else if(currentState == "liquidacion")
					dgE.loadDGInExcel(dgRepLiq,null,titulo + " del " + fecIni + " al " + fecFin);	
				else if(currentState == "fondeador")
					dgE.loadDGInExcel(dgRepFond,null,titulo + " al " + fecIni);
			}
		
			public function generar():void{
				var devPer:Number = 0;
				var devSinIva:Number = 0;
				var ivaInt:Number = 0;
				var intDev:Number = 0;
				
				if(valida()){
					var tipo:String = tipoReg.selectedValue.toString();
					
					initConexion();
					du.sCursor();
							
					du.ejecutaWsMethod(wsMS,function(evt:ResultEvent):void {											
						_xmlRep = new XML(evt.result.toString());
						
						du.rCursor();
						du.closeWs(wsMS);
					
						btnExportar.enabled = false;
													
						if(_xmlRep.elements().length() - 1 > 0){
							//se resta 1 debido a que el grid contiene un registro adicional
							//que corresponde al total
							var cont:int = _xmlRep.elements().length() - 1;
							var info:String;
							
							btnExportar.enabled = true;
							if(currentState == null){
								for(var i:int = 0; i < cont; i++){
									devPer += Number(_xmlRep.Table[i].DEV_DEL_MES.toString());
									devSinIva += Number(_xmlRep.Table[i].DEV_MES_SIN_IVA.toString());
									ivaInt += Number(_xmlRep.Table[i].IVA_INT_MES.toString()); 
								}
								dgReporte.dataProvider = _xmlRep.Table;
								info = " Devengo del Periodo: " + global.formatearMoneda(devPer.toString());
								info += " Devengo del Periodo Sin IVA: " + global.formatearMoneda(devSinIva.toString());
								info += " IVA Interes " + global.formatearMoneda(ivaInt.toString());	
							}
							else if(currentState == "liquidacion"){
								for(var j:int = 0; j < cont; j++){
									intDev += Number(_xmlRep.Table[j].INT_NO_DEV_PAG_ANT);
								}
								dgRepLiq.dataProvider = _xmlRep.Table;
								info = " Interes no Devengado Pagado: " + global.formatearMoneda(intDev.toString());
							}
							else if(currentState == "fondeador"){
								for(var n:int = 0; n < cont; n++){
									devPer += Number(_xmlRep.Table[n].DEV_PERIODO.toString());
									devSinIva += Number(_xmlRep.Table[n].DEV_PERIODO_SIN_IVA.toString());
									ivaInt += Number(_xmlRep.Table[n].IVA_INTERES.toString()); 
								}
								dgRepFond.dataProvider = _xmlRep.Table;
								info = " Devengo del Periodo: " + global.formatearMoneda(devPer.toString());
								info += " Devengo del Periodo Sin IVA: " + global.formatearMoneda(devSinIva.toString());
								info += " IVA Interes " + global.formatearMoneda(ivaInt.toString());	
							}
							lblTotal.text = cont + " Registro(s) " + info;   
							fecIni = dtfFecha.text;
							fecFin = dtfFechaFinal.text;
						}
						else{
							Alert.show("No se encontraron registros que coincidan con los criterios de consulta.\n\nVerifique los datos seleccionados.",titulo,4,null,null,global.iAlert);
							if(currentState == null)
								dgReporte.dataProvider = null;
							else if(currentState == "liquidacion")
								dgRepLiq.dataProvider = null;
							lblTotal.text = "";
						}
					});
					wsMS.getRepInteresDevengado.send(tipo, dtfFecha.text, dtfFechaFinal.text);
				}	
			}			
						
			public function initApp():void{
				global = new Globales();
				du = new Utils();
				titulo = "Reporte de Interes Devengado";
				lblTitulo.text = titulo.toUpperCase();
				limpiar();
			}		
			
			private function initConexion():void{				
				wsMS = new WebService();			
				wsMS.wsdl = Application.application.wsStr.wsdlRep.toString();
				wsMS.loadWSDL();
			}	
		
			public function limpiar():void{
				var fec:Date;
				currentState = null;
				dgReporte.dataProvider = null;
				btnExportar.enabled = false;
				lblTotal.text = "";
				fec = global.obtenerFechaSistema();
				dtfFecha.selectedDate = global.seleccionarDiaHabil(new Date(fec.fullYear,fec.month,fec.date - 1));
				dtfFechaFinal.selectedDate = global.seleccionarDiaHabil(new Date(fec.fullYear,fec.month,fec.date - 1));
				tipoReg.selectedValue = "1";
			}
			
			public function modificaEstado(event:Event):void{
				if(RadioButton(event.currentTarget).value.toString() == "1"){
					currentState = null;
					dgReporte.dataProvider = null;
				}
				else if(RadioButton(event.currentTarget).value.toString() == "2"){
					currentState = "liquidacion";
					dgRepLiq.dataProvider = null;	 
				}
				else if(RadioButton(event.currentTarget).value.toString() == "3"){
					currentState = "fondeador";
					dgRepFond.dataProvider = null;	
				}
				lblTotal.text = "";
			}
				
			public function valida():Boolean{
				if(dtfFecha.text == ""){
					Alert.show("Seleccione la fecha inicial del reporte.",titulo,4,null,null,global.iAlert);
					return false;
				}
				if(currentState != "fondeador" && dtfFechaFinal.text == ""){
					Alert.show("Seleccione la fecha final del reporte.",titulo,4,null,null,global.iAlert);
					return false;
				}
				return true;
			}
			
			public function validaFecha():void{
				dtfFecha.selectedDate = global.validarFecha(dtfFecha.selectedDate, dtfFechaFinal.selectedDate,titulo);
			}
		]]>
	</mx:Script>
