				<mx:DataGridColumn headerText="DEVENGO PERIODO SIN IVA" dataField="DEV_MES_SIN_IVA" width="170"/>
				<mx:DataGridColumn headerText="IVA INTERES" dataField="IVA_INT_MES" width="90"/>
				<mx:DataGridColumn headerText="PORCENTAJE IVA" dataField="IVA" width="110"/>
				<mx:DataGridColumn headerText="DIAS DEVENGADOS" dataField="DIAS_DEV" width="110"/>
			</mx:columns>
		</mx:DataGrid>
		<mx:Button id="btnExportar" x="678.5" y="182" label="Exportar Excel" click="exportar()" enabled="false"/>
