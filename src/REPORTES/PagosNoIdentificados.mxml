		<mx:Canvas x="17.95" y="53.5" width="264.05" height="120.5" styleName="canvasMod">
			<mx:Label x="10" y="10" text="Fecha Inicial" width="81" height="20"/>
			<mx:Label x="141.05" y="10" text="Fecha Final" width="81" height="20"/>
			<mx:DateField id="dtfFecha" x="10" y="28.5" width="111" change="validaFecha()"/>
			<mx:DateField id="dtfFechaFinal" x="141.05" y="28.5" width="111" change="validaFecha()"/>
			<mx:Label x="10" y="60.5" text="Tipo" width="81" height="20"/>
			<mx:Canvas x="10" y="80.5" width="242.04999" height="30" styleName="canvasMod">
				<mx:RadioButtonGroup id="tipoPago"/>
				<mx:CheckBox id="chkNoIden"  x="22" y="2" label="No Identificados"/>
				<mx:CheckBox id="chkIden" x="132" y="2" label="Identificados"/>
			</mx:Canvas>
		</mx:Canvas>
		<mx:Button x="71.75" y="182" label="Generar" click="generar()"/>
		<mx:Button x="150.25" y="182" label="Limpiar" width="71" height="24" click="limpiar()"/>
		<mx:Label x="18" y="34" text="Criterios de SelecciÃ³n" width="124.25"/>
		<mx:DataGrid id="dgReporte" x="18.45" y="218" width="763.05" visible="true" height="165" horizontalScrollPolicy="auto">
