				<mx:DataGridColumn headerText="NOMBRE IDENTIFICO" dataField="NOMPE_IDEN" width="220"/>
				<mx:DataGridColumn headerText="FEC IDENTIFICO" dataField="FECHAIDEN" width="100"/>
			</mx:columns>
		</mx:DataGrid>
		<mx:Button id="btnExportar" x="678.5" y="182" label="Exportar Excel" click="exportar()" enabled="false"/>
		<mx:Label id="lblTotal" x="18.45" y="391" width="290.05" fontWeight="bold" fontStyle="italic" fontSize="12"/>
	</mx:Canvas>
</mx:Canvas>