		<mx:RadioButtonGroup id="tipoCheque" />
		<mx:RadioButton x="20.25" y="11" label="Desembolso" groupName="tipoCheque" value="D" selected="true"/>
		<mx:RadioButton x="20.25" y="39.5" label="Dev. Garantía" groupName="tipoCheque" value="G"/>
