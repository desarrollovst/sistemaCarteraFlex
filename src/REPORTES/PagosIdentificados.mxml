<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="800" height="426" backgroundAlpha="1.0" 
	backgroundColor="#FFFFFF" creationPolicy="all" creationComplete="initApp()" 
	verticalScrollPolicy="off" horizontalScrollPolicy="off" xmlns:Data="Data.*">
	
	<mx:Script>
		<![CDATA[
			import Data.ExcelExportXls;
			import Data.Globales;
			import Data.Utils;
			import mx.collections.ArrayCollection;
			import mx.containers.TitleWindow;	
			import mx.controls.Alert;
			import mx.controls.DataGrid;
			import mx.core.Application;
			import mx.effects.easing.Elastic;
			import mx.formatters.NumberFormatter;
			import mx.managers.PopUpManager;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.soap.WebService;
			import mx.utils.ObjectUtil;
			
			private var _xmlRep:XML = new XML();
			
			public var wsMS:WebService;
			public var fecIni:String;
			public var fecFin:String;
			public var titulo:String;
			private var du:Utils;
			private var global:Globales;
		
			private function cambiarColorFila(event:Event):void{
				dgReporte.rowColorFunction = seleccionaColor;
			}
		
			public function exportar():void{
				var dgE:ExcelExportXls = new ExcelExportXls();
				dgE.loadDGInExcel(dgReporte,null,titulo + " del " + fecIni + " al " + fecFin);		
			}
		
			public function generar():void{
				if(valida()){
					var tipo:int;
					var tipoFecha:int;
					initConexion();
					du.sCursor();
					global.bloquear();
					
					tipo = int(tipoPago.selectedValue);
					tipoFecha = int(cboFecha.selectedItem.value);
							
					du.ejecutaWsMethod(wsMS,function(evt:ResultEvent):void {											
						_xmlRep = new XML(evt.result.toString());
						
						du.rCursor();
						du.closeWs(wsMS);
						global.desbloquear();
						
						dgReporte.dataProvider = null;
						btnExportar.enabled = false;
													
						if(_xmlRep.elements().length() > 0){
							var cantidad:Number = 0;
							var registro:Number = 0;
							var cont:int = _xmlRep.elements().length();
							var etiqueta:String;
							btnExportar.enabled = true;
							cantidad = Number(_xmlRep.dtPagos[cont-1].CANTIDAD);
							registro = Number(_xmlRep.dtPagos[cont-1].REFERENCIA);   
							if(tipo == 1){
								etiqueta = " Depósitos Identificados de Pago $";
								titulo = "Reporte de Pagos Identificados";
							}
							else if(tipo == 2){
								etiqueta = " Depósitos Identificados de Garantía $";
								titulo = "Reporte de Pagos Identificados de Garantía";
							}
							else if(tipo == 3){
								etiqueta = " Depósitos Identificados de Pago y Garantía $";
								titulo = "Reporte de Pagos Identificados";
							}
							else if(tipo == 4){
								etiqueta = " Depósitos Identificados de Transferencia de GL a Cartera $";
								titulo = "Reporte de Transferencias de GL a Cartera";
							}
							else if(tipo == 5)
								etiqueta = " Depósitos Identificados de Transferencia de Cartera a GL $";					
							lblTotal.text = registro + etiqueta + global.formatearEntero(cantidad.toString());
							//delete _xmlRep.dtPagos[cont-1];
							dgReporte.dataProvider = _xmlRep.dtPagos;
							fecIni = dtfFecha.text;
							fecFin = dtfFechaFinal.text;
							cambiarColorFila(evt);	
						}
						else{
							Alert.show("No se encontraron registros que coincidan con los criterios de consulta.\n\nVerifique los datos seleccionados.",titulo,4,null,null,global.iAlert);
						}
					});
					wsMS.getRepPagosIdentFecha.send(tipo, dtfFecha.text, dtfFechaFinal.text, tipoFecha);	
				}
			}			
						
			public function initApp():void{
				global = new Globales();
				du = new Utils();
				var f:Date = global.obtenerFechaSistema();
				var fecMin:Date = new Date(f.getFullYear(),f.getMonth()-1,1);
				var fecMax:Date = new Date(f.getFullYear(),f.getMonth(),f.getDate());
				titulo = "Reporte de Pagos Identificados"
				lblTitulo.text = titulo.toUpperCase();
				limpiar();
			}		
			
			private function initConexion():void{				
				wsMS = new WebService();			
				wsMS.wsdl = Application.application.wsStr.wsdlRep.toString();
				wsMS.loadWSDL();
			}	
		
			private function limpiar():void{
				var fec:Date;
				dgReporte.dataProvider = null;
				btnExportar.enabled = false;
				lblTotal.text = "";
				fec = global.obtenerFechaSistema();
				dtfFecha.selectedDate = global.seleccionarDiaHabil(new Date(fec.fullYear,fec.month,fec.date - 1));
				dtfFechaFinal.selectedDate = global.seleccionarDiaHabil(new Date(fec.fullYear,fec.month,fec.date - 1));
				cboFecha.selectedIndex = 0;
				tipoPago.selection = null;
			}
				
			private function seleccionaColor(datagrid:DataGrid, rowIndex:int, color:uint):uint{
				var rColor:uint;
				var value:String = _xmlRep.dtPagos[rowIndex].FECHA;
				if (value == "-- SUBTOTAL --")
					rColor = 0xbfc8be;
				else 
					rColor = color;
				return rColor;
			}	
				
			private function valida():Boolean{
				if(dtfFecha.text == ""){
					Alert.show("Seleccione la Fecha Inicial del Reporte.",titulo,4,null,null,global.iAlert);
					return false;
				}
				if(dtfFechaFinal.text == ""){
					Alert.show("Seleccione la Fecha Final del Reporte.",titulo,4,null,null,global.iAlert);
					return false;
				}
				if(tipoPago.selection == null){
					Alert.show("Seleccione el tipo de Depósito Identificado.",titulo,4,null,null,global.iAlert);
					return false;
				}
				if(cboFecha.selectedIndex == 0){
					Alert.show("Seleccione el tipo de Fecha del Reporte.",titulo,4,null,null,global.iAlert);
					return false;
				}
				
				return true;
			}
			
			private function validaFecha():void{
				dtfFecha.selectedDate = global.validarFecha(dtfFecha.selectedDate, dtfFechaFinal.selectedDate,titulo);
				//validacion de diferencia de fechas
			}
		]]>
	</mx:Script>
