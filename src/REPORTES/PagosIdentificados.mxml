	<mx:Canvas x="17.95" y="53.5" width="440.05" height="128.5" styleName="canvasMod">
		<mx:Label x="10" y="10" text="Fecha Inicial" width="81" height="20"/>
		<mx:Label x="141.05" y="10" text="Fecha Final" width="81" height="20"/>
		<mx:DateField id="dtfFecha" x="10" y="28.5" width="111" change="validaFecha()"/>
		<mx:DateField id="dtfFechaFinal" x="141.05" y="28.5" width="111" change="validaFecha()"/>
		<mx:Label x="10" y="60.5" text="Tipo" width="81" height="20"/>
		<mx:Canvas x="10" y="80.5" width="403.05" height="30" styleName="canvasMod">
			<mx:RadioButtonGroup id="tipoPago"/>
			<mx:RadioButton id="rdbPago" x="22.5" y="2" label="Pago" groupName="tipoPago" value="1"/>
			<mx:RadioButton id="rdbGarantia" x="76.5" y="2" label="Garantía" groupName="tipoPago" value="2"/>
			<mx:RadioButton id="rdbPagoGtia" x="150.55" y="2" label="Pago y Garantía" groupName="tipoPago" value="3"/>
			<mx:RadioButton id="rdbTransGLCart" x="257.55" y="2" label="Trans. GL a Cartera" groupName="tipoPago" value="4"/>
			<!--<mx:RadioButton id="rdbTransCartGL" x="373.05" y="2" label="Trans. Cartera a GL" groupName="tipoPago" value="5"/>-->
		</mx:Canvas>
		<mx:ComboBox id="cboFecha" x="273" y="27.5" width="140.05">
			<mx:dataProvider>
				<mx:Object label="--Seleccionar--" value="0"/>	
	    		<mx:Object label="Fecha Pago" value="2"/>
			</mx:dataProvider>
		</mx:ComboBox>
		<mx:Label x="273" y="10" text="Fecha de Consulta" width="117.05" height="20"/>
	</mx:Canvas>
