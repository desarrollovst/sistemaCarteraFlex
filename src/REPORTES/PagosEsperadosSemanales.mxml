	<mx:Label id="lblTitulo" x="18" y="10" fontSize="12" fontWeight="bold" fontStyle="italic"/>
	<mx:Canvas x="17.95" y="53.5" width="140.04999" height="68.5" styleName="canvasMod">
		<mx:Label x="13.5" y="10" text="Fecha Inicial" height="20"/>
		<mx:DateField id="dtfFecha" x="13.5" y="28.5" width="111" disabledDays="{[0,2,3,4,5,6]}"/>
	</mx:Canvas>
	<mx:Button x="71.25" y="130" label="Generar" click="generar()"/>
	<mx:Button x="149.75" y="130" label="Limpiar" width="71" height="24" click="limpiar()"/>
