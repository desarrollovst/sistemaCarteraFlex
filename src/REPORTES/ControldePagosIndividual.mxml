		<mx:TextInput id="txtCiclo" x="226.6" y="10" width="45" maxChars="2" restrict="0-9" enter="generar()"/>
		<mx:TextInput id="txtAcred" x="88.3" y="47" width="72" maxChars="6" restrict="0-9" enter="generar()"/>
		<mx:Label id="lblAcred" x="10" y="49" text="Acreditado:" width="70.3" height="20" textAlign="right"/>
		<mx:Label id="lblFecha" x="168.3" y="49" text="Fecha:" width="50" height="20" textAlign="right"/>
