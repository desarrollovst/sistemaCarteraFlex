<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="390" height="220" backgroundAlpha="1.0" 
	backgroundColor="#FFFFFF" creationPolicy="all" creationComplete="initApp()" 
	verticalScrollPolicy="off" horizontalScrollPolicy="off">
	
	<mx:Script>
		<![CDATA[
			import Data.ExcelExportXls;
			import Data.Globales;
			import Data.Utils;
			import mx.collections.ArrayCollection;
			import mx.containers.TitleWindow;
			import mx.controls.Alert;
			import mx.core.Application;
			import mx.effects.easing.Elastic;		
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.soap.WebService;
			import mx.utils.ObjectUtil;
			
			private var _xmlRep:XML =  new XML();
			
			public var wsMS:WebService;
			public var fecIni:String;
			public var grupo:String;
			public var ciclo:String;
			public var acred:String;
			public var titulo:String;
			public var rep:String;
			private var du:Utils;
			private var global:Globales;
		
			public function exportar():void{
				if(valida() == true){
					grupo = txtGrupo.text;
					ciclo = txtCiclo.text;
					acred = txtAcred.text;
					
					Application.application.bloquear();
					initConexion();
					du.sCursor();
							
					du.ejecutaWsMethod(wsMS,function(evt:ResultEvent):void {											
						_xmlRep = new XML(evt.result.toString());
						
						Application.application.desbloquear();
						du.rCursor();
						du.closeWs(wsMS);
						
						dgReporte.dataProvider = null;
													
						if(_xmlRep.elements().length() > 0){
							var cont:int = _xmlRep.elements().length();
							dgReporte.dataProvider = _xmlRep.Table;
							fecIni = dtfFecha.text;
							var dgE:ExcelExportXls = new ExcelExportXls(); 
							dgE.loadDGInExcel(dgReporte,null,titulo + " al " + fecIni);	
						}
						else
							Alert.show("No se encontraron registros que coincidan con los criterios de consulta.\n\nVerifique los datos seleccionados.",titulo,4,null,null,global.iAlert);
							
						wsMS = null;	
					});
					wsMS.getRepControlPagosAcred.send(grupo, ciclo, acred, dtfFecha.text, Application.application.U_ID,
												      Application.application.PUESTO);
				}	
			}
		
			public function generar():void{	
				if(valida() == true){
					var consulta:String;
					var id:String = "&id=" + rep;
					var fecha:String = "&fecha=" + global.formatoFechaSep(dtfFecha.selectedDate,"-");
					var usuario:String = "&usuario=" + Application.application.U_ID;
					var nomUsuario:String = "&nomUsuario=" + Application.application.lblUser.text;
					var puesto:String = "&puesto=" + Application.application.PUESTO;
					var grupo:String = "&grupo=" + txtGrupo.text;
					var ciclo:String = "&ciclo=" + txtCiclo.text;
					var acred:String = "&acred=" + txtAcred.text;
					consulta = global.urlPdf + id + fecha + usuario + nomUsuario + puesto + grupo + ciclo + acred;					
					Application.application.muestraPdf(consulta);
				}
			}						
						
			public function initApp():void{
				global = new Globales();
				du = new Utils();
				rep = "32";
				titulo = "Reporte de Control de Pagos Individual";
				lblTitulo.text = titulo.toUpperCase();
				limpiar();
			}		
			
			private function initConexion():void{				
				wsMS = new WebService();			
				wsMS.wsdl = Application.application.wsStr.wsdlRep.toString();
				wsMS.loadWSDL();
			}	
		
			public function limpiar():void{
				var fec:Date;
				dgReporte.dataProvider = null;
				fec = Application.application._Current_Fecha;
				dtfFecha.selectedDate = global.seleccionaDiaHabil(new Date(fec.fullYear,fec.month,fec.date - 1));
				txtGrupo.text = "";
				txtCiclo.text = "";
				txtAcred.text = "";
			}
				
			public function valida():Boolean{
				if(dtfFecha.text == ""){
					Alert.show("Seleccione la fecha del reporte.",titulo,4,null,null,global.iAlert);
					return false;
				}
				if(txtGrupo.text == ""){
					Alert.show("Capture el código de grupo.",titulo,4,null,null,global.iAlert);
					return false;
				}
				if(txtCiclo.text == ""){
					Alert.show("Capture el ciclo del crédito.",titulo,4,null,null,global.iAlert);
					return false;
				}
				if(txtAcred.text == ""){
					Alert.show("Capture el código de acreditado.",titulo,4,null,null,global.iAlert);
					return false;
				}
				return true;
			}
			
		]]>
	</mx:Script>
	<mx:Label id="lblTitulo" x="18" y="10" width="340" fontSize="12" fontWeight="bold" fontStyle="italic"/>
	<mx:Button x="117.5" y="144" label="Generar" click="generar()"/>
	<mx:Button x="201.5" y="144" label="Limpiar" width="71" height="24" click="limpiar()"/>
	<mx:Label x="18" y="34" text="Criterios de Selección" width="124.25"/>
