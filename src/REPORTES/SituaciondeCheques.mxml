				<mx:DataGridColumn headerText="BANCO" dataField="NOMBREBANCO" width="90"/>
				<mx:DataGridColumn headerText="ASESOR" dataField="CDGOCPE" width="70"/>
				<mx:DataGridColumn headerText="NOMBRE ASESOR" dataField="NOMBREASESOR" width="180"/>
			</mx:columns>
		</mx:DataGrid>
		<mx:Button id="btnExportar" x="678.5" y="133" label="Exportar Excel" click="exportar()" enabled="false"/>
		<mx:Label id="lblTotal" x="18.45" y="342" width="290.05" fontWeight="bold" fontStyle="italic" fontSize="12"/>
	</mx:Canvas>
