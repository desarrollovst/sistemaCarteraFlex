<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" creationPolicy="all" 
	creationComplete="initApp()" verticalScrollPolicy="auto" horizontalScrollPolicy="auto">
	<mx:states>
		<mx:State name="individual">
			<mx:RemoveChild target="{dgReporte}"/>
			<mx:AddChild relativeTo="{canvas1}" position="lastChild">
				<mx:DataGrid id="dgRepInd" x="18.45" y="216" width="763.55" visible="true" height="193" horizontalScrollPolicy="auto">
					<mx:columns>
						<mx:DataGridColumn headerText="FECHA" dataField="FECHA" width="100"/>
						<mx:DataGridColumn headerText="SUCURSAL" dataField="CDGCO" width="80"/>
						<mx:DataGridColumn headerText="NOMBRE SUCURSAL" dataField="SUCURSAL" width="150"/>
						<mx:DataGridColumn headerText="GRUPO" dataField="CDGNS" width="60"/>
						<mx:DataGridColumn headerText="NOMBRE GRUPO" dataField="GRUPO" width="180"/>
						<mx:DataGridColumn headerText="CICLO" dataField="CICLO" width="60"/>
						<mx:DataGridColumn headerText="INICIO" dataField="FINICIO" width="80"/>
						<mx:DataGridColumn headerText="ACREDITADO" dataField="CDGCL" width="90"/>
						<mx:DataGridColumn headerText="NOMBRE ACREDITADO" dataField="CLIENTE" width="200"/>
						<mx:DataGridColumn headerText="DEVOLUCION" dataField="CANTIDAD" width="90"/>
						<mx:DataGridColumn headerText="CHEQUE" dataField="CHEQUE" width="90"/>
					</mx:columns>
				</mx:DataGrid>
			</mx:AddChild>
		</mx:State>
	</mx:states>
	
	<!--Componente de Reporte de Devolucion de Prestamos-->
	<mx:Script>
		<![CDATA[
			import Data.ExcelExportXls;
			import Data.Globales;
			import Data.Utils;
			import mx.collections.ArrayCollection;
			import mx.core.Application;
			import mx.containers.TitleWindow;			
			import mx.managers.PopUpManager;
			import mx.formatters.NumberFormatter;
			import mx.controls.Alert;
			import mx.effects.easing.Elastic;
			import mx.rpc.soap.WebService;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.events.FaultEvent;
			import mx.utils.ObjectUtil;
			
			private var _xmlRep:XML =  new XML();
			
			public var wsMS:WebService;
			public var fecIni:String;
			public var fecFin:String;
			public var titulo:String;
			private var du:Utils;
			private var global:Globales;
		
			public function exportar():void{
				var dgE:ExcelExportXls = new ExcelExportXls(); 
				if(currentState == null)
					dgE.loadDGInExcel(dgReporte,null,titulo + " del " + fecIni + " al " + fecFin);
				else if(currentState == "individual")
					dgE.loadDGInExcel(dgRepInd,null,titulo + " del " + fecIni + " al " + fecFin);
			}
		
			public function generar():void{
				if(valida()){
					var tipo:String = tipoReg.selectedValue.toString();
					
					initConexion();
					du.sCursor();
							
					du.ejecutaWsMethod(wsMS,function(evt:ResultEvent):void {											
						_xmlRep = new XML(evt.result.toString());
						
						du.rCursor();
						du.closeWs(wsMS);
						
						dgReporte.dataProvider = null;
						btnExportar.enabled = false;
													
						if(_xmlRep.elements().length() > 0){
							var cont:int = _xmlRep.elements().length();
							btnExportar.enabled = true;
							
							if(currentState == null)
								dgReporte.dataProvider = _xmlRep.Table;
							else if(currentState == "individual")
								dgRepInd.dataProvider = _xmlRep.Table;
								
							lblTotal.text = cont + " Registro(s)";   
							fecIni = dtfFecha.text;
							fecFin = dtfFechaFinal.text;
						}
						else{
							Alert.show("No se encontraron registros que coincidan con los criterios de consulta.\n\nVerifique los datos seleccionados.",titulo,4,null,null,global.iAlert);
							lblTotal.text = "";
						}
						wsMS = null;
					});
					wsMS.getRepDevPrn.send(tipo, dtfFecha.text, dtfFechaFinal.text, global.obtenerUsuario());
				}	
			}			
						
			public function initApp():void{
				global = new Globales();
				du = new Utils();
				titulo = "Reporte de Devolución de Prestamo";
				lblTitulo.text = titulo.toUpperCase();
				limpiar();
			}		
			
			private function initConexion():void{				
				wsMS = new WebService();			
				wsMS.wsdl = Application.application.wsStr.wsdlRep.toString();
				wsMS.loadWSDL();
			}	
		
			public function limpiar():void{
				var fec:Date;
				currentState = null;
				dgReporte.dataProvider = null;
				btnExportar.enabled = false;
				lblTotal.text = "";
				fec = global.obtenerFechaSistema();
				dtfFecha.selectedDate = global.seleccionaDiaHabil(new Date(fec.fullYear,fec.month,fec.date - 1));
				dtfFechaFinal.selectedDate = global.seleccionaDiaHabil(new Date(fec.fullYear,fec.month,fec.date - 1));
				tipoReg.selectedValue = "1";
			}
			
			public function modificaEstado(event:Event):void{
				if(RadioButton(event.currentTarget).value.toString() == "1"){
					currentState = null;
					dgReporte.dataProvider = null;
				}
				else if(RadioButton(event.currentTarget).value.toString() == "2"){
					currentState = "individual";
					dgRepInd.dataProvider = null;	 
				}
				lblTotal.text = "";
			}
				
			public function valida():Boolean{
				if(dtfFecha.text == ""){
					Alert.show("Seleccione la fecha inicial del reporte.",titulo,4,null,null,global.iAlert);
					return false;
				}
				if(dtfFechaFinal.text == ""){
					Alert.show("Seleccione la fecha final del reporte.",titulo,4,null,null,global.iAlert);
					return false;
				}
				return true;
			}
			
			public function validaFecha():void{
				dtfFecha.selectedDate = global.validaFecha(dtfFecha.selectedDate, dtfFechaFinal.selectedDate,titulo);
			}
		]]>
	</mx:Script>
	<mx:Canvas width="800" height="450" backgroundColor="#ffffff" backgroundAlpha="1.0" id="canvas1">
		<mx:Label id="lblTitulo" x="18" y="10" width="300" fontSize="12" fontWeight="bold" fontStyle="italic"/>
		<mx:Button x="71.75" y="181" label="Generar" click="generar()"/>
		<mx:Button x="150.25" y="181" label="Limpiar" width="71" height="24" click="limpiar()"/>
		<mx:Label x="18" y="34" text="Criterios de Selección" width="124.25"/>
		<mx:DataGrid id="dgReporte" x="18.45" y="216" width="763.05" visible="true" height="195" horizontalScrollPolicy="auto">
			<mx:columns>
				<mx:DataGridColumn headerText="FECHA" dataField="FECHA" width="100"/>
				<mx:DataGridColumn headerText="SUCURSAL" dataField="CDGCO" width="80"/>
				<mx:DataGridColumn headerText="NOMBRE SUCURSAL" dataField="SUCURSAL" width="150"/>
				<mx:DataGridColumn headerText="GRUPO" dataField="CDGNS" width="60"/>
				<mx:DataGridColumn headerText="NOMBRE GRUPO" dataField="GRUPO" width="180"/>
				<mx:DataGridColumn headerText="CICLO" dataField="CICLO" width="80"/>
				<mx:DataGridColumn headerText="INICIO" dataField="FINICIO" width="80"/>
				<mx:DataGridColumn headerText="DEVOLUCION" dataField="DEVOLUCION" width="90"/>
				<mx:DataGridColumn headerText="DEVENGO CANCELADO" dataField="DEV_CANCELADO" width="120"/>
			</mx:columns>
		</mx:DataGrid>
		<mx:Button id="btnExportar" x="678.5" y="181" label="Exportar Excel" click="exportar()" enabled="false"/>
		<mx:Label id="lblTotal" x="18.45" y="419" width="763.05" fontWeight="bold" fontStyle="italic" fontSize="12"/>
		<mx:Canvas x="17.95" y="53.5" width="264.05" height="120.5" styleName="canvasMod">
			<mx:Label x="10" y="10" text="Fecha Inicial" width="81" height="20"/>
			<mx:Label x="141.05" y="10" text="Fecha Final" width="81" height="20"/>
			<mx:DateField id="dtfFecha" x="10" y="28.5" width="111" change="validaFecha()"/>
			<mx:DateField id="dtfFechaFinal" x="141.05" y="28.5" width="111" change="validaFecha()"/>
			<mx:Label x="10" y="60.5" text="Tipo" width="81" height="20"/>
			<mx:Canvas x="10" y="80.5" width="242.04999" height="30" styleName="canvasMod">
				<mx:RadioButtonGroup id="tipoReg"/>
				<mx:RadioButton id="rdbGrupal"  x="42" y="2" label="Grupal" groupName="tipoReg" value="1" change="modificaEstado(event)"/>
				<mx:RadioButton id="rdbInd" x="130" y="2" label="Individual" groupName="tipoReg" value="2" change="modificaEstado(event)"/>
			</mx:Canvas>
		</mx:Canvas>
	</mx:Canvas>
</mx:Canvas>