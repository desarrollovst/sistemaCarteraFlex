		private function activarBotonEditar(pActivo:Boolean, pTipo:String):void{
			var pPuesto:String = obtienePuesto();
			
			if(pPuesto == "A"){
				if(pTipo == "M")
					btnEditarA.enabled = pActivo;
			}
			else if(pPuesto == "S"){
				if(pTipo == "M")
					btnEditarS.enabled = pActivo;
			}
			else if(pPuesto == "R"){
				if(pTipo == "M")
					btnEditarR.enabled = pActivo;
			}
		}
		
		private function activarBotonEliminar(pActivo:Boolean, pTipo:String):void{
			var pPuesto:String = obtienePuesto();
			
			if(pPuesto == "A"){
				if(pTipo == "M")	
					btnEliminarA.enabled = pActivo;
			}
			else if(pPuesto == "S"){
				if(pTipo == "M")
					btnEliminarS.enabled = pActivo;
			}
			else if(pPuesto == "R"){
				if(pTipo == "M")
					btnEliminarR.enabled = pActivo;
			}
		}
		
		private function buscarLista():void{
			var pPuesto:String = obtienePuesto();
			var pCodigo:String = "";
			var pNombre:String = "";
			
			wsIncC = new WebService;
			
			_xmlMora = null;
			
			if(pPuesto == "A"){ //Asesor
			
				pCodigo = txtCodigoA.text;
				pNombre = txtNombreA.text;
				
				initConexionIncC();
				du.sCursor();
				Application.application.bloquear();
				
				dgMA.dataProvider = null;
				
				activarBotonEditar(false, "M");
				activarBotonEliminar(false, "M");
								
				du.ejecutaWsMethod(wsIncC,function(evt:ResultEvent):void {											
					_xmlMora = new XML(evt.result.toString());
				
					du.rCursor();
					du.closeWs(wsIncC);	
					Application.application.desbloquear();
						
					if (_xmlMora.elements().length() > 0)
						dgMA.dataProvider = _xmlMora.Table;	
				});
				wsIncC.getParametrosIncMora.send(pCodigo, pNombre, pPuesto);
			}
			else if(pPuesto == "S"){ //Sucursal
				pCodigo = txtCodigoS.text;
				pNombre = txtNombreS.text;
				
				initConexionIncC();
				du.sCursor();
				Application.application.bloquear();
				
				dgMS.dataProvider = null;
				
				activarBotonEditar(false, "M");
				activarBotonEliminar(false, "M");
				
				du.ejecutaWsMethod(wsIncC,function(evt:ResultEvent):void {											
					_xmlMora = new XML(evt.result.toString());
				
					du.rCursor();
					du.closeWs(wsIncC);	
					Application.application.desbloquear();
						
					if (_xmlMora.elements().length() > 0)
						dgMS.dataProvider = _xmlMora.Table;
				});
					wsIncC.getParametrosIncMora.send(pCodigo, pNombre, pPuesto);
			}
			else if(pPuesto == "R"){ //Region
				pCodigo = txtCodigoR.text;
				pNombre = txtNombreR.text;
				
				initConexionIncC();
				du.sCursor();
				Application.application.bloquear();
				
				dgMR.dataProvider = null;
				
				activarBotonEditar(false, "M");				
				activarBotonEliminar(false, "M");
				
				du.ejecutaWsMethod(wsIncC,function(evt:ResultEvent):void {											
					_xmlMora = new XML(evt.result.toString());
				
					du.rCursor();
					du.closeWs(wsIncC);	
					Application.application.desbloquear();
						
					if (_xmlMora.elements().length() > 0)
						dgMR.dataProvider = _xmlMora.Table;
				});
				wsIncC.getParametrosIncMora.send(pCodigo, pNombre, pPuesto);
			}
		}
		
		private function eliminarIncentivo():void{
			var pPuesto:String = obtienePuesto();
			
			if(pPuesto == "A"){
				if(dgMA.selectedIndex >= 0){
					if(dgMA.selectedItem.CODIGO != "")
						Alert.show("¿Desea eliminar el parámetro de mora seleccionado?", titulo, Alert.YES|Alert.NO,null, manejadorEliminarIncentivo,global.iQuest);
					else
						Alert.show("Seleccione el parámetro de mora a eliminar.", titulo, 4,null,null,global.iAlert);
				}
			}
			else if(pPuesto == "S"){
				if(dgMS.selectedIndex >= 0){
					if(dgMS.selectedItem.CODIGO != "")
						Alert.show("¿Desea eliminar el parámetro de mora seleccionado?", titulo, Alert.YES|Alert.NO,null, manejadorEliminarIncentivo,global.iQuest);
					else
						Alert.show("Seleccione el parámetro de mora a eliminar.", titulo, 4,null,null,global.iAlert);
				}
			}
			else if(pPuesto == "R"){
				if(dgMR.selectedIndex >= 0){
					if(dgMR.selectedItem.CODIGO != "")
						Alert.show("¿Desea eliminar el parámetro de mora seleccionado?", titulo, Alert.YES|Alert.NO,null, manejadorEliminarIncentivo,global.iQuest);
					else
						Alert.show("Seleccione el parámetro de mora a eliminar.", titulo, 4,null,null,global.iAlert);
				}
			}
		}
			
		private function manejadorEliminarIncentivo(e:CloseEvent):void{
			var pPuesto:String = obtienePuesto();
			
			var mCodigo:String;
			var mMoraIni:Number;
			var mMoraFin:Number;
			var mPorcentaje:Number;
			
			if(e.detail==Alert.YES){
				if(pPuesto == "A"){
					mCodigo = dgMA.selectedItem.CODIGO;
					mMoraIni = dgMA.selectedItem.MORA_INI;
					mMoraFin = dgMA.selectedItem.MORA_FIN;
					mPorcentaje = dgMA.selectedItem.PORCENTAJE;
				}
				else if(pPuesto == "S"){
					mCodigo = dgMS.selectedItem.CODIGO;
					mMoraIni = dgMS.selectedItem.MORA_INI;
					mMoraFin = dgMS.selectedItem.MORA_FIN;
					mPorcentaje = dgMS.selectedItem.PORCENTAJE;
				}
				else if(pPuesto == "R"){
					mCodigo = dgMR.selectedItem.CODIGO;
					mMoraIni = dgMR.selectedItem.MORA_INI;
					mMoraFin = dgMR.selectedItem.MORA_FIN;
					mPorcentaje = dgMR.selectedItem.PORCENTAJE;
				}
				
		    	initConexionIncR();
		    	du.sCursor();
				Application.application.bloquear();
				wsIncR.addEventListener(ResultEvent.RESULT, setAccionElimina);
				wsIncR.setAccionParametrosIncMora.send(mCodigo, pPuesto, mMoraIni, mMoraFin, mPorcentaje, 3);
			}
		}
			
		private function setAccionElimina(event:ResultEvent):void{
			wsIncR.disconnect();
			du.rCursor();
			Application.application.desbloquear();
			wsIncR.removeEventListener(ResultEvent.RESULT, setAccionElimina);
			var res:String = new String(event.result.toString());
			
			if (res.substr(0,1) == "1")
				buscarLista();
			else
				Alert.show(res.substr(2,res.length-1), titulo,4,null,null,global.iAlert);
		}
		
