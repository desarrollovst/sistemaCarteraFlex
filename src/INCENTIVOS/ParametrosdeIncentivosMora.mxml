				activarBotonEditar(false, "M");
				activarBotonEliminar(false, "M");
				txtCodigoS.text = "";
				txtNombreS.text = "";
			}
			else if(id == 3){ //Region
				currentState = "Region"
				
				dgMR.dataProvider = null;
				
				activarBotonEditar(false, "M");
				activarBotonEliminar(false, "M");
				txtCodigoR.text = "";
				txtNombreR.text = "";
			}
			else
				currentState = null;
