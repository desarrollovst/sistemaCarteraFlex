		private function mostrarFormMora(tipo:int):void{
			//tipo = 1 NUEVO REGISTRO
			//tipo = 2 MODIFICA REGISTRO
			var pPuesto:String = obtienePuesto();
			var comMttoParamsIncMora:MttoParamIncMora = new MttoParamIncMora();						
			objMtto = this;
			switch(tipo){
				case 1: 
					comMttoParamsIncMora = MttoParamIncMora(PopUpManager.createPopUp(objMtto,MttoParamIncMora,true));
					comMttoParamsIncMora.addEventListener(Event.REMOVED_FROM_STAGE, actualiza);
					PopUpManager.centerPopUp(comMttoParamsIncMora);							
					comMttoParamsIncMora.nuevo(pPuesto);
					break;
				case 2:
					if(pPuesto == "A"){
						if (dgMA.selectedIndex >= 0){
							comMttoParamsIncMora = MttoParamIncMora(PopUpManager.createPopUp(objMtto,MttoParamIncMora,true));	
							comMttoParamsIncMora.addEventListener(Event.REMOVED_FROM_STAGE, actualiza);
							PopUpManager.centerPopUp(comMttoParamsIncMora);
							iniVar();
							
							this.indAsesor = dgMA.selectedIndex;
							this.vScrollAsesor = dgMA.verticalScrollPosition;
							comMttoParamsIncMora.edicion(_xmlMora.Table[dgMA.selectedIndex], pPuesto);	
						}
						else
							Alert.show("Debe seleccionar el registro de mora.",titulo,4,null,null,global.iAlert);	
					}
					else if(pPuesto == "S"){
						if (dgMS.selectedIndex >= 0){
							comMttoParamsIncMora = MttoParamIncMora(PopUpManager.createPopUp(objMtto,MttoParamIncMora,true));	
							comMttoParamsIncMora.addEventListener(Event.REMOVED_FROM_STAGE, actualiza);
							PopUpManager.centerPopUp(comMttoParamsIncMora);
							iniVar();
							
							this.indSucursal = dgMS.selectedIndex;
							this.vScrollSucursal = dgMS.verticalScrollPosition;
							comMttoParamsIncMora.edicion(_xmlMora.Table[dgMS.selectedIndex], pPuesto);	
						}
						else
							Alert.show("Debe seleccionar el registro de mora.",titulo,4,null,null,global.iAlert);
					}
					else if(pPuesto == "R"){
						if (dgMR.selectedIndex >= 0){
