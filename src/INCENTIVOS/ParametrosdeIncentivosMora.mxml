			var id:Number = cbxPuesto.selectedItem.id;
			
			if(id == 1){ //Asesor
				currentState = "Asesor";
				
				dgMA.dataProvider = null;
				
				activarBotonEditar(false, "M");
				activarBotonEliminar(false, "M");
