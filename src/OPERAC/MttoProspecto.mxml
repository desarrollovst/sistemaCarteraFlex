	<mx:Button id="btnAceptar" x="414" y="508" icon="@Embed(source='assets/button_ok.png')" click="enviar()" width="40"/>
	<mx:Image x="446" y="4" width="44" height="45" scaleContent="true">
		<mx:source>assets/Usuario.png</mx:source>
	</mx:Image>
