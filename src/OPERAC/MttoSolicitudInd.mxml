					du.rCursor();
					du.closeWs(wsCat);
					
					this.ciclo = ciclo;
					txtCiclo.text = ciclo;
					
					info = null;
					formProdSolicInd.cboProdCred.addEventListener(ListEvent.CHANGE, actualizaProdCred);
					formDatosGralSolic.dtfSolicitud.addEventListener(CalendarLayoutChangeEvent.CHANGE, actualizaFecSolic);
