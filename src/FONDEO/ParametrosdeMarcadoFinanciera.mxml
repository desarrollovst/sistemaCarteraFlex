	<!-- VARIABLES -->
	<mx:Script>
		<![CDATA[
			private var info:DatosParamMarcFN;
			
			private var _xmlDatos:XML = new XML();
			private var _xmlProductos:XML = new XML();
			private var dPermisos:XML = new XML();
			
