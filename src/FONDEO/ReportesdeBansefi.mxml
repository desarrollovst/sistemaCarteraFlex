                            <mx:DataGridColumn headerText="Tipo Tasa ( mensual, anual, global o sobre saldos insolutos)" dataField="TIPO_TASA" width="100"/>
                            <mx:DataGridColumn headerText="Tasa de Interés  Moratoria" dataField="TASA_INT_MOR" width="150"/>
                            <mx:DataGridColumn headerText="Frecuencia de Pago (semanal, quincenal, mensual)" dataField="FRECU_PAGO" width="150"/>
                            <mx:DataGridColumn headerText="Saldo a la Fecha" dataField="SALDO_FECHA" width="150"/>
