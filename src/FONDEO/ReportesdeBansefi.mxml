            <mx:AddChild relativeTo="{cnvCarga}" position="lastChild">
                <mx:Canvas x="10" y="283" width="818" height="286" styleName="canvasMod" id="Canvas2">
                    <mx:DataGrid x="10" y="42" width="796" height="200" id="dgLayDisp"
