                    <mx:Label id="lblTotalLD" x="10" y="250" width="350" fontSize="12" fontWeight="bold" fontStyle="italic"/>
                    <mx:Button id="btnExportarLD" x="702.95" y="10" label="Exportar Excel" click="exportar()" enabled="false"/>
