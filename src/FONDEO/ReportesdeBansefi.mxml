		<mx:Transition fromState="*" toState="*">		
			<mx:Sequence>
				<mx:Resize duration="500" target="{cnvCarga}"/> 
				<mx:AddChildAction duration="500" target="{Canvas1}"/>
				<mx:AddChildAction duration="500" target="{Canvas2}"/>
