					var res:String = evt.result.toString();

					du.rCursor();
					du.closeWs(wsMS);
					
					if(res.substr(0,1) == "1"){
						du.initWsCat(wsCat);
						du.sCursor();
						
						du.ejecutaWsMethod(wsCat,function(ev:ResultEvent):void {											
							_xmlRes = new XML(ev.result.toString());

