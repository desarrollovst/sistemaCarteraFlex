                            <mx:DataGridColumn headerText="ID_PERSONA" dataField="ID_PERSONA" width="120"/>
                            <mx:DataGridColumn headerText="CURP" dataField="CURP" width="150"/>
                            <mx:DataGridColumn headerText="RFC" dataField="RFC" width="130"/>
                            <mx:DataGridColumn headerText="NUM_CREDITO_BANCO" dataField="NO_CRED_BCO" width="160"/>
                            <mx:DataGridColumn headerText="MONTO_CREDITO" dataField="MONTO_CREDITO" width="130"/>
                            <mx:DataGridColumn headerText="FECHA_OTORGAMIENTO" dataField="FOTORGAMIENTO" width="160"/>
                            <mx:DataGridColumn headerText="FECHA_VEN_CREDITO" dataField="FVENCIMIENTO" width="150"/>
                            <mx:DataGridColumn headerText="SALDO_CARTERA" dataField="SDO_CAPITAL" width="150"/>
                            <mx:DataGridColumn headerText="TIPO_CREDITO" dataField="TIPO_CREDITO" width="120"/>
                            <mx:DataGridColumn headerText="CVE_ENT_INEGI" dataField="CDGEF_INEGI" width="130"/>
                            <mx:DataGridColumn headerText="CVE_MUN_INEGI" dataField="CDGMU_INEGI" width="130"/>
                            <mx:DataGridColumn headerText="CVE_LOC_INEGI" dataField="CDGLO_INEGI" width="130"/>
                            <mx:DataGridColumn headerText="CVE_DISPERSORA" dataField="CVE_DISPERSORA" width="130"/>
                            <mx:DataGridColumn headerText="NOMBRE_DISPERSORA" dataField="NOM_DISPERSORA" width="300"/>
                            <mx:DataGridColumn headerText="NOMBRE DEL CLIENTE" dataField="CLIENTE" width="250"/>
                        </mx:columns>
                    </mx:DataGrid>
                    <mx:Label id="lblTotalRM" x="10" y="250" width="350" fontSize="12" fontWeight="bold" fontStyle="italic"/>
