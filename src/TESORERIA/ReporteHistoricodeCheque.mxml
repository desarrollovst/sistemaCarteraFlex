			<mx:DataGridColumn headerText="NOMBRE SUCURSAL" dataField="SUCURSAL" width="140"/>
			<mx:DataGridColumn headerText="COD. CLIENTE" dataField="CDGCL" width="120"/>
			<mx:DataGridColumn headerText="NOMBRE CLIENTE" dataField="NOMBRECL" width="250"/>
			<mx:DataGridColumn headerText="COD. ASESOR" dataField="CDGOCPE" width="120"/>
			<mx:DataGridColumn headerText="NOMBRE ASESOR" dataField="ASESOR" width="250"/>
		</Data:columns>
	</Data:RowColorDataGrid>
</mx:Canvas>