			<mx:DataGridColumn headerText="ESTATUS" dataField="ESTATUS" width="100"/>
			<mx:DataGridColumn headerText="TIPO" dataField="TIPO" width="120"/>
			<mx:DataGridColumn headerText="FECHA IMPRESIÓN" dataField="FIMPRESION" width="130"/>
			<mx:DataGridColumn headerText="FECHA COBRO" dataField="FCOBROREAL" width="100"/>
			<mx:DataGridColumn headerText="DIAS TRANS." dataField="DIAS_TRANS" width="100"/>
			<mx:DataGridColumn headerText="NOCHEQUESUS" dataField="NOCHEQUESUS" width="130"/>
			<mx:DataGridColumn headerText="FECHA CANCELACIÓN" dataField="FCANCELACION" width="140"/>
			<mx:DataGridColumn headerText="COD. GRUPO" dataField="CDGNS" width="120"/>
			<mx:DataGridColumn headerText="NOMBRE GRUPO" dataField="GRUPO" width="140"/>
			<mx:DataGridColumn headerText="CICLO" dataField="CICLO" width="100"/>
