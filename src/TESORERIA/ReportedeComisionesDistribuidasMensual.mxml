			<mx:ComboBox id="cbxMes" labelField="nombre" x="10" y="57.5" width="111"/>
			<mx:Label x="135" y="39" text="Año" width="72" height="20" id="lblAnio"/>
			<mx:ComboBox id="cbxAnio" labelField="id" x="135" y="57.5" width="72"/>
			<mx:Label x="224.5" y="39" text="Reporte" width="81" height="20" id="lblReporte"/>
			<mx:ComboBox id="cbxReporte" labelField="nombre" x="224.5" y="57.5" width="128" change="modificarEstado()"/>
