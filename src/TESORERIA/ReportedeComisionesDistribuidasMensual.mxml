	<!--Componente de Reporte de Comisiones Distribuidas Mensuales-->
	<mx:Script>
		<![CDATA[
			import mx.formatters.DateFormatter;
			import Data.ExcelExportXls;
			import Data.Globales;
			import Data.Utils;
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.controls.DataGrid;
			import mx.core.Application;
			import mx.effects.easing.Elastic;
			import mx.formatters.NumberFormatter;		
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.soap.WebService;
			import mx.utils.ObjectUtil;

			private var _xmlRep:XML =  new XML();
			
			private var wsMS:WebService;
			private var titulo:String;
			private var du:Utils;
			private var global:Globales;
			
			private var anio:Number;
			private var mes:Number;
			private var mesDesc:String;
			private var tipoReporte:String;
			
			private var acMes:ArrayCollection = new ArrayCollection();
			private var acAnio:ArrayCollection = new ArrayCollection();
			private var acReporte:ArrayCollection = new ArrayCollection();
			
			private function exportar():void{
				var dgE:ExcelExportXls = new ExcelExportXls();
				
				if(currentState == "desglose"){
					dgE.loadDGInExcel(dgDesglose,null,titulo + " Desglose de " + mesDesc + " " + anio);
				}
				else if(currentState == "caratula"){
					dgE.loadDGInExcel(dgCaratula,null,titulo + " Póliza de " + mesDesc + " " + anio);
				}		
			}
						
			public function generar():void{
				anio = cbxAnio.selectedItem.id;
				mes = cbxMes.selectedItem.id;
				mesDesc = cbxMes.selectedItem.nombre;
				tipoReporte = cbxReporte.selectedItem.desc.toLowerCase();
				
				initConexion();
				du.sCursor();
				
				_xmlRep = null;
				
				if(tipoReporte == "desglose"){
					du.ejecutaWsMethod(wsMS,function(evt:ResultEvent):void {											
						_xmlRep = new XML(evt.result.toString());
						
						du.rCursor();
						du.closeWs(wsMS);
						
						dgDesglose.dataProvider = null;
						btnExportarD.enabled = false;
						lblTotalD.text = "";
						
						if(_xmlRep.elements().length() > 0){
							dgDesglose.dataProvider = _xmlRep.Table;
							lblTotalD.text = _xmlRep.elements().length() + " Registro(s)";
							btnExportarD.enabled = true; 
						}
						else{
							Alert.show("No se encontraron registros que coincidan con los criterios de consulta.\n\nVerifique los datos seleccionados.",titulo,4,null,null,global.iAlert);
							lblTotalD.text = "";
						}
					});
					wsMS.getRepComisionesDistribuidasMensual.send(anio, mes, Application.application.U_ID);
				}
				else if(tipoReporte == "caratula"){
					du.ejecutaWsMethod(wsMS,function(evt:ResultEvent):void {											
						_xmlRep = new XML(evt.result.toString());
						
						du.rCursor();
						du.closeWs(wsMS);
						
						dgCaratula.dataProvider = null;
						btnExportarC.enabled = false;
						lblTotalC.text = "";
				
						if(_xmlRep.elements().length() > 0){
							dgCaratula.dataProvider = _xmlRep.Table;
							lblTotalC.text = _xmlRep.elements().length() + " Registro(s)";
							btnExportarC.enabled = true; 
						}
						else{
							Alert.show("No se encontraron registros que coincidan con los criterios de consulta.\n\nVerifique los datos seleccionados.",titulo,4,null,null,global.iAlert);
							lblTotalC.text = "";
						}
					});
					wsMS.getRepComisionesDistribuidasMensualDesglose.send(anio, mes, Application.application.U_ID);
				}
			}			
			
			public function formateaReporte():void{
				var oItem:Object;
				var item:Array = new Array();
								
				oItem = new Object();
				oItem.id = "0";
				oItem.nombre = "--Seleccionar--";	
				item.push(oItem);
				
				oItem = new Object();
				oItem.id = "1";	
				oItem.nombre = "Desglose";
				oItem.desc = "Desglose";
				item.push(oItem);
												
				oItem = new Object();
				oItem.id = "2";	
				oItem.nombre = "Póliza";
				oItem.desc = "Caratula";
				item.push(oItem);
				
				acReporte = new ArrayCollection(item);
				cbxReporte.dataProvider = acReporte;
				cbxReporte.selectedIndex = 0;
			}
			
			public function initApp():void{
				global = new Globales();
				du = new Utils();
				titulo = "Reporte de Comisiones Distribuidas";
				lblTitulo.text = titulo.toUpperCase(); 
				cbxMes.dataProvider = global.formateaMes();
				cbxAnio.dataProvider = global.formateaAnio();
				formateaReporte();
			}		
			
			public function initConexion():void{				
				wsMS = new WebService();			
				wsMS.wsdl = Application.application.wsStr.wsdlRep.toString();
				wsMS.loadWSDL();
			}	
			
			public function limpiar():void{
				if(currentState == "desglose"){
					dgDesglose.dataProvider = null;
					lblTotalD.text = "";
					btnExportarD.enabled = false;
				}
				else if (currentState == "caratula"){
					dgCaratula.dataProvider = null;
					lblTotalC.text = "";
					btnExportarC.enabled = false;	
				}
				currentState = null;
				formateaReporte();
			}
			
			private function modificarEstado():void{
				var estado:String = cbxReporte.selectedItem.desc;
				if(estado.toLowerCase() == "seleccionar")
					currentState = null
				else
					currentState = estado.toLowerCase();
			}
		]]>
	</mx:Script>
