		<mx:Label x="141.05" y="10" text="Fecha Final" width="81" height="20" id="label1"/>
		<mx:DateField id="dtFechaInicial" x="10" y="28.5" width="111" showToday="true" change="validaFecha()"/>
		<mx:DateField id="dtFechaFinal" x="141.05" y="28.5" width="111" showToday="true" change="validaFecha()"/>
	</mx:Canvas>
